<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="XyzTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="XyzTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="XyzTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="XyzTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ArticleListActivity" parent="XyzTheme.NoActionBar" />
    <style name="ArticleDetailActivity" parent="XyzTheme.NoActionBar" />

</resources>
