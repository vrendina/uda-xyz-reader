<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="XyzTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="XyzTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightGray</item>
    </style>

    <style name="XyzTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="XyzTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="XyzTheme.ArticleListActivity" parent="XyzTheme.NoActionBar" />
    <style name="XyzTheme.ArticleDetailActivity" parent="XyzTheme.NoActionBar" />

    <style name="BodyText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="AuthorText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/author_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DateText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_font</item>
    </style>

</resources>
