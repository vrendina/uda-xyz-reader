<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="io.levelsoftware.xyzreader.ArticleDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_detail_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/XyzTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctbl_detail_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample"
                android:contentDescription="@string/description_article_image"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/sample"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/scrim"
                android:contentDescription="@null"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/card_side_margin"
                android:layout_marginLeft="@dimen/card_side_margin"
                android:layout_marginEnd="@dimen/card_side_margin"
                android:layout_marginRight="@dimen/card_side_margin"
                android:paddingBottom="64dp">

                <TextView
                    android:id="@+id/tv_detail_title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#CCFFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Japanese Fairy Tales"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_detail_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#AAFFFFFF"
                    tools:text="Yei Theodora Ozaki"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingRight="64dp"
                    android:paddingEnd="64dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"/>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/XyzTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="64dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="io.levelsoftware.xyzreader.ArticleDetailActivity"
        tools:showIn="@layout/activity_article_detail">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_detail_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_side_margin"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="4dp"
            app:contentPaddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_text_side_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Jun 6th, 2016" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/large_text" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_detail_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:layout_anchor="@id/cv_detail_text_container"
        app:layout_anchorGravity="top|end"
        app:srcCompat="@drawable/ic_share_black_24dp" />

</android.support.design.widget.CoordinatorLayout>
