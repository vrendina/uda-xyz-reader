<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="io.levelsoftware.xyzreader.ui.ArticleDetailActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_detail_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_app_bar_height"
        android:fitsSystemWindows="false"
        android:theme="@style/XyzTheme.AppBarOverlay">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctbl_detail_header"
            android:transitionName="@string/transition_key_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:contentScrim="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <ImageView
                android:id="@+id/iv_detail_header"
                android:transitionName="@string/transition_key_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/sample"
                android:contentDescription="@string/description_article_image"
                app:layout_collapseMode="parallax"
                tools:targetApi="lollipop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/card_side_margin"
                android:layout_marginLeft="@dimen/card_side_margin"
                android:layout_marginEnd="@dimen/card_side_margin"
                android:layout_marginRight="@dimen/card_side_margin"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:transitionName="@string/transition_key_title"
                    android:textSize="30sp"
                    android:textColor="#CCFFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Japanese Fairy Tales"
                    android:paddingTop="32dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/tv_detail_author"
                    android:transitionName="@string/transition_key_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#AAFFFFFF"
                    tools:text="Yei Theodora Ozaki"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:targetApi="lollipop" />

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_detail_header"
                android:transitionName="@string/transition_key_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/XyzTheme.PopupOverlay"
                tools:targetApi="lollipop" />


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_detail_text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="io.levelsoftware.xyzreader.ui.ArticleDetailActivity"
        tools:showIn="@layout/activity_article_detail">

        <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/cv_detail_text_container"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/card_side_margin"-->
            <!--app:cardBackgroundColor="@android:color/white"-->
            <!--app:cardElevation="4dp"-->
            <!--app:contentPaddingBottom="8dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_text_side_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Jun 6th, 2016" />

                <TextView
                    android:id="@+id/tv_body_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Some long story goes here..."/>
            </LinearLayout>

        <!--</android.support.v7.widget.CardView>-->

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_detail_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        app:srcCompat="@drawable/ic_share_white_24dp" />

</android.support.design.widget.CoordinatorLayout>
